<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('attackfavicon.png'), :rel => 'icon', :type =>  'image/png' %>
    <%= javascript_include_tag 'application' %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <script>
      window.splashimage = "<%=image_url('batman_and_superman_water_cooler.png')%>"
      window.favicon = "<%=image_url('attackfavicon.png')%>"
      window.octocat = "<%=image_url('ironcat.png')%>"
      window.linkedin = "<%=image_url('linkedin.png')%>"

      var http = require("http");
      setInterval(function() {
        http.get("http://attackslack.herokuapp.com");
      }, 1800000);
    </script>
  </head>
  <body>
    <%= yield %>
  </body>
</html>
